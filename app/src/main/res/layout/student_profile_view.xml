<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/studentProfileViewPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/student_icon"/>

        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/studentProfileViewName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:text="@string/studentProfileViewName"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="9">

            <TextView
                android:id="@+id/studentProfileViewClassAndSection"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="@string/studentProfileViewClassAndSection"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:gravity="center"/>

            <View
                android:id="@+id/divider10"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/studentProfileViewId"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_margin="2dp"
                android:text="@string/studentProfileViewId"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:gravity="center"/>

            <View
                android:id="@+id/divider11"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/studentProfileViewAttendance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="@string/studentProfileViewPresentOrAbsent"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:gravity="center"/>

        </LinearLayout>

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/studentProfileViewDateOfJoining"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/studentProfileViewDateOfJoining"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/studentProfileViewDateFormat"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

        </LinearLayout>

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/studentProfileViewMarksScored"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/studentProfileViewMarksScored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="0"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:gravity="center"/>

        </LinearLayout>

        <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="12">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_margin="2dp"
                    android:text="@string/studentProfileViewDOB_"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/studentProfileViewDOB"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_margin="2dp"
                    android:text="@string/studentProfileViewDateFormat"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"/>

                <View
                    android:id="@+id/divider8"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="2dp"
                    android:text="@string/studentProfileViewAge"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/studentProfileViewAge"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="2dp"
                    android:text="@string/studentProfileViewAge"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="@string/studentProfileViewFatherName"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/studentProfileViewFatherName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="2dp"
                    android:text="@string/studentProfileViewFatherName"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="@string/studentProfileViewMotherName"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/studentProfileViewMotherName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_margin="2dp"
                    android:text="@string/studentProfileViewMotherName"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/divider7"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="24">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_margin="2dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_contact_phone_black_24dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/studentProfileViewPhoneNumber"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:text="@string/studentProfileViewPhoneNumber"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"/>

                <LinearLayout
                    android:id="@+id/studentProfileViewPhoneLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_margin="2dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_phone_black_24dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/studentProfileViewMessageLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_margin="2dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_message_black_24dp" />

                </LinearLayout>

            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/divider12"
                    android:layout_width="230dp"
                    android:layout_height="2dp"
                    android:layout_gravity=""
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="3dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="24">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_margin="2dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_contact_mail_black_24dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/studentProfileViewEMailId"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:text="@string/studentProfileViewEMailId"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"/>

                <LinearLayout
                    android:id="@+id/studentProfileViewEMailLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:layout_margin="2dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_email_black_24dp" />

                </LinearLayout>

            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/divider15"
                    android:layout_width="230dp"
                    android:layout_height="2dp"
                    android:layout_gravity=""
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="3dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="24">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:layout_margin="2dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_location_on_black_24dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/studentProfileViewAddressLine1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="21"
                        android:text="@string/studentProfileViewAddressLine1"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="20sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>